<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UserCardControls">
        <attr name="buttonTitle" format="string" />
        <attr name="buttonIcon" format="reference" />
    </declare-styleable>
    <declare-styleable name="CustomInputField">
        <attr name="hintText" format="string" />

        <attr name="inputType" format="enum">
            <enum name="text" value="1"/>
            <enum name="textEmailAddress" value="33"/>
            <enum name="number" value="2"/>
            <enum name="phone" value="3"/>
            <enum name="password" value="129"/>
            <enum name="textPassword" value="129"/>
            <enum name="numberPassword" value="18"/>
        </attr>
        <attr name="textColor" format="color" />
        <attr name="labelText" format="string" />
        <attr name="required" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomButton">
        <attr name="buttonVariant">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
            <enum name="outlined" value="2"/>
            <enum name="text" value="3"/>
        </attr>

        <attr name="buttonSize">
            <enum name="small" value="0"/>
            <enum name="medium" value="1"/>
            <enum name="large" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="AccordionView">
        <attr name="accordionTitle" format="string" />
    </declare-styleable>

</resources>